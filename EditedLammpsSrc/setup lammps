download lammps from git

sudo apt-get install fftw-static
sudo apt-get install openmpi-devel
sudo apt-get install libjpeg
sudo apt-get install libpng-dev
sudo apt-get install zlib1g-dev

cd ~/LAMMPS/src/STUBS
make clean-all
make
cd ~/LAMMPS/lib/reax
make -f Makefile.gfortran

cd ~/LAMMPS/src

python Make.py -p gpu -gpu mode=double arch=35 -a lib-all
#-j 8 should improve number of cores during compile time
python Make.py -j 8-p gpu -gpu mode=double arch=35 -a lib-all

make yes-BODY
make yes-COMPRESS
make yes-GRANULAR
make yes-MISC
make yes-MOLECULE
make yes-REAX
make yes-RIGID
make yes-GPU

cd ~/LAMMPS/src/MAKE
